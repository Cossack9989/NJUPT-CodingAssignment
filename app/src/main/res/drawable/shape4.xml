<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    //设置圆角
    <corners android:radius="10dp" />
    //设置button的大小
    <size
        android:height="40dp"
        android:width="320dp" />
    //设置button的内边距
    <padding android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp"/>
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray"
        android:dashGap="4dp"
        />
    <gradient
        android:endColor="#908effff"
        android:gradientRadius="200dp"
        android:startColor="#790040ff"
        android:type="radial"/>

</shape>